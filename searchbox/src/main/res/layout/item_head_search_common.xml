<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- <com.zhy.view.flowlayout.TagFlowLayout
         android:id="@+id/flowlayout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:padding="20dp"
         zhy:max_select="-1">

     </com.zhy.view.flowlayout.TagFlowLayout>-->

    <TextView
        android:id="@+id/title_common"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="常 用"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:visibility="gone"/>

    <com.wyt.searchbox.tagview.FlowTagLayout
        android:id="@+id/size_flow_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/title_lately_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/title_lately"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:text="最 近"
            />
        <Button
            android:id="@+id/lately_delete_btn"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/icon_delete"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <com.wyt.searchbox.tagview.FlowTagLayout
        android:id="@+id/lately_flow_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/title_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="历 史"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

</LinearLayout>